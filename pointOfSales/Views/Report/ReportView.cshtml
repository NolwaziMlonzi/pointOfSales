
@{
    ViewBag.Title = "ReportView";
}
<style>
    .tab {
        width: 239px;
        
    }
        .tab a:hover {
            background-color: rgba(0,0,0,0.08);
        }
        .reports
        {
            text-align:left;
        }
</style>
<h2><i class="fa fa-file" aria-hidden="true"> Report View</i></h2>
<div class="reports">
    <h3>Export Report As</h3>
    @{Html.BeginForm("CreateExcelSheet", "Report", FormMethod.Get);
        {
            <div>
                <input type="submit" value="Excel" style="width: 180px;" class="btn btn-default" />
            </div>
            <br />
        }
        Html.EndForm();
    }
    @{Html.BeginForm("csvSheet", "Report", FormMethod.Get);
        {
            <div>
                <input type="submit" value="Csv" style="width: 180px;" class="btn btn-default" />
            </div>
            <br />
        }
        Html.EndForm();
    }

    @{Html.BeginForm("CreateDocument", "Report", FormMethod.Get);
        {
            <div>
                <input type="submit" value="Pdf" style="width: 180px;" class="btn btn-default" />
            </div>
        }
        Html.EndForm();
    }
</div>

<br />
<ul class="nav nav-pills">
    <li class="active"><a href="#home" data-toggle="tab">Items Sold Per Product</a></li>
    <li class="tab"><a href="#profile" data-toggle="tab">Products</a></li>
    <li class="tab"><a href="#profile" data-toggle="tab">Products Sold</a></li>
    <li class="tab"><a href="#profile" data-toggle="tab">Products In Stock</a></li>
    <li class="tab"><a href="#profile" data-toggle="tab">Products In Stock vs Sold</a></li>

</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">

        @model IEnumerable<pointOfSales.Models.ProductItem>

        </div>

       
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPerItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Id)
            </th>
           
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    R: @Html.DisplayFor(modelItem => item.CostPerItem)
                </td>
                <td>
                    R: @Html.DisplayFor(modelItem => item.TotalCost)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Invoice_Id)
                </td>
            </tr>
        }
      
    </table>



