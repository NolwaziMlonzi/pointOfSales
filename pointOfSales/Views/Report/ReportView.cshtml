
@{
    ViewBag.Title = "ReportView";
}
<style>
    .tab {
        width: 239px;
        
    }
        .tab a:hover {
            background-color: rgba(0,0,0,0.08);
        }
        .reports
        {
            text-align:left;
        }
</style>
<h2><i class="fa fa-file" aria-hidden="true"> Report View</i></h2>
<div class="reports">
    <h3>Export Report As</h3>
    @{Html.BeginForm("CreateExcelSheet", "Report", FormMethod.Get);
        {
            <div>
                <input type="submit" value="Excel" style="width: 180px;" class="btn btn-default" />
            </div>
            <br />
        }
        Html.EndForm();
    }
    @{Html.BeginForm("csvSheet", "Report", FormMethod.Get);
        {
            <div>
                <input type="submit" value="Csv" style="width: 180px;" class="btn btn-default" />
            </div>
            <br />
        }
        Html.EndForm();
    }

    @{Html.BeginForm("CreateDocument", "Report", FormMethod.Get);
        {
            <div>
                <input type="submit" value="Pdf" style="width: 180px;" class="btn btn-default" />
            </div>
        }
        Html.EndForm();
    }
</div>

<br />
